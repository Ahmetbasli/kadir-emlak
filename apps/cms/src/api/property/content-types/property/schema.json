{
  "kind": "collectionType",
  "collectionName": "properties",
  "info": {
    "singularName": "property",
    "pluralName": "properties",
    "displayName": "Property"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "slug": {
      "type": "uid",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "price": {
      "type": "decimal"
    },
    "currency": {
      "type": "enumeration",
      "default": "TRY",
      "enum": [
        "TRY",
        "USD",
        "EUR"
      ]
    },
    "type": {
      "type": "enumeration",
      "default": "apartment",
      "enum": [
        "apartment",
        "house",
        "land",
        "commercial"
      ]
    },
    "listingStatus": {
      "type": "enumeration",
      "default": "for-sale",
      "enum": [
        "for-sale",
        "for-rent",
        "sold"
      ]
    },
    "images": {
      "type": "media",
      "multiple": true
    },
    "bedrooms": {
      "type": "integer"
    },
    "bathrooms": {
      "type": "integer"
    },
    "area": {
      "type": "integer"
    },
    "amenities": {
      "type": "json"
    },
    "location": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::location.location",
      "inversedBy": "properties"
    },
    "agent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::agent.agent",
      "inversedBy": "properties"
    },
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false
    }
  }
}
